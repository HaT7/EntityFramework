@model IList<EntityFramework.Models.Oder>

@{
    ViewBag.Title = "Oder";
    Layout = "_Layout";
}

<h2>List Oder</h2>
<a asp-controller="Oders" asp-action="UpSert" class="btn btn-primary">Creare new Oder</a>

<table style="width: 100%">
    <tr>
        <th>Id</th>
        <th>User</th>
        <th>Product</th>
        <th>Action</th>
    </tr>

    @foreach (var oder in @Model)
    {
        <tr>
            <td>@oder.Id</td>
            <td>@oder.User.Name</td>
            <td>@oder.Product.Name</td>
            <td>
                <a asp-controller="Oders" asp-action="UpSert" asp-route-id="@oder.Id" class="btn btn-info">Edit</a>
                <a asp-controller="Oders" asp-action="Delete" asp-route-id="@oder.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this item?')">Delete</a>
            </td>
        </tr>
    }
</table>