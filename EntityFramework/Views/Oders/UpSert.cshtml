@model EntityFramework.ViewModels.OderViewModels

@{
    ViewBag.Title = "Oder";
    Layout = "_Layout";
    var title = Model.Oder.Id == 0 ? "Create Oder" : "Edit Oder";
}

<h2>@title</h2>

<form method="post">
    <input asp-for="Oder.Id" hidden/>
    <div class="form-group">
        <label asp-for="Oder.UserId">User Name</label>
        @Html.DropDownListFor(m => m.Oder.UserId, Model.UserList, "-Select User", new{@class = "form-control"})
        <span asp-validation-for="Oder.UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Oder.ProductId">Product Name</label>
        @Html.DropDownListFor(m => m.Oder.ProductId, Model.ProductList, "-Select Product", new{@class = "form-control"})
        <span asp-validation-for="Oder.ProductId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
