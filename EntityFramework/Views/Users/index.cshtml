@model List<EntityFramework.Models.User>

@{
    ViewBag.Title = "User";
    Layout = "_Layout";
}

<h2>List User</h2>

<a asp-controller="Users" asp-action="UpSert" class="btn btn-primary">Create new user</a>

<table style="width:100%">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Action</th>
    </tr>
    @foreach (var user in @Model)
    {
        <tr>
            <td>@user.UserId</td>
            <td>@user.Name</td>
            <td>@user.Phone</td>
            <td>@user.Address</td>
            <td>
                @* <button href="/Products/Delete/@product.ProductId" class="btn btn-danger">Delete</button> *@
                <a asp-controller="Users" asp-action="UpSert" asp-route-id="@user.UserId" class="btn btn-info">Edit</a>
                <a asp-controller="Users" asp-action="Delete" asp-route-userId="@user.UserId" class="btn btn-danger" onclick="return confirm('Do you want to delete this item?')">Delete</a>
            </td>
        </tr>
    }
</table>